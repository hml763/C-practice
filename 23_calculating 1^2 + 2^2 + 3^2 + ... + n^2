//calculating 1^2 + 2^2 + 3^2 + ... + n^2 

#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <limits.h>

int main(){
	
	int i,sum=0,num;
	
	printf("1^2 + 2^2 + 3^2 + ... + n^2 = ?  program\n");
	printf("type in n : "), scanf("%d",&num);
	for(i=1;i<1+num;i++)
		sum = sum + i*i;
	
	printf("sum : %d\n",sum);
	
	return 0;
}
